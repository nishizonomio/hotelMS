CREATE TABLE RestaurantBilling (
order_id INT AUTO_INCREMENT PRIMARY KEY,
guest_id INT,
staff_id INT,
table_number VARCHAR(10),
order_date DATETIME,
total_amount DECIMAL(10,2),
payment_id INT
);
CREATE TABLE RestaurantOrderItems (
item_id INT AUTO_INCREMENT PRIMARY KEY,
order_id INT,
item_name VARCHAR(100),
quantity INT,
price DECIMAL(10,2)
);

CREATE TABLE MinibarTracking (
minibar_id INT AUTO_INCREMENT PRIMARY KEY,
guest_id INT,
room_number VARCHAR(10),
item_name VARCHAR(100),
quantity INT,
price DECIMAL(10,2),
usage_date DATETIME,
payment_id INT
);

CREATE TABLE InRoomDiningOrders (
service_id INT AUTO_INCREMENT PRIMARY KEY,
guest_id INT,
staff_id INT,
room_number VARCHAR(10),
order_date DATETIME,
total_amount DECIMAL(10,2),
payment_id INT
);
CREATE TABLE RoomServiceItems (
item_id INT AUTO_INCREMENT PRIMARY KEY,
service_id INT,
item_name VARCHAR(100),
quantity INT,
price DECIMAL(10,2)
);

CREATE TABLE GiftShopSales (
sale_id INT AUTO_INCREMENT PRIMARY KEY,
guest_id INT,
staff_id INT,
sale_date DATETIME,
total_amount DECIMAL(10,2),
payment_id INT
);

CREATE TABLE GiftShopItems (
item_id INT AUTO_INCREMENT PRIMARY KEY,
sale_id INT,
item_name VARCHAR(100),
quantity INT,
price DECIMAL(10,2)
);

CREATE TABLE BarPOS (
bar_order_id INT AUTO_INCREMENT PRIMARY KEY,
guest_id INT,
staff_id INT,
table_number VARCHAR(10),
order_date DATETIME,
total_amount DECIMAL(10,2),
payment_id INT
);
CREATE TABLE BarOrderItems (
item_id INT AUTO_INCREMENT PRIMARY KEY,
bar_order_id INT,
item_name VARCHAR(100),
quantity INT,
price DECIMAL(10,2)
);
